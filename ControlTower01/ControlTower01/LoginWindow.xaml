<Window x:Class="ControlTower01.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTower01"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300" FontSize="14" Background="Orchid" WindowStartupLocation="CenterScreen">
    <Border Background="DarkCyan" CornerRadius="20" Margin="15">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUserName" Background="Black" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <TextBox Name="txtPassword" Background="Black" Foreground="White" FontSize="18"/>
            <Button x:Name="btnSubmit" Content="Submit" Click ="btnSubmit_clicked" Margin="60 3"  Background="Black" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
